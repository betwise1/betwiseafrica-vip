{
  "name": "betwiseafrica-viplogic",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "netlify dev",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/dist/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/dist/tailwind.css --watch",
    "build": "npm run build:css",
    "rebuild-tailwind": "npx tailwindcss -i ./src/input.css -o ./public/dist/tailwind.css --minify --content \"./public/**/*.html,./src/**/*.{js,ts}\""
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "netlify-cli": "^15.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
